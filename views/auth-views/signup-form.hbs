{{>flash_messages}}


<h2 class="d-flex justify-content-center text-center title">Sign Up</h2>

<div class="container d-flex justify-content-around">

  <form action="/process-signup" method="POST">

    <div class="form-row">

      <div class="col-lg-12 field">
        <label class="ingr">
          Your full name: (2 characters min)
          <input type="text" name="fullName" minlength="2" placeholder='Leia Organa' class="form-control " />
        </label>
      </div>

      <div class="col-lg-12 field">
        <label class="ingr">
          Email : <input type="email" name="email" placeholder='Leia@resistance.com' class="form-control " />
        </label>
      </div>

      <div class="col-lg-12 field">
        <label class="ingr">
          Password: <input type="password" name="originalPassword" placeholder="It's a secret" class="form-control " />
        </label>
      </div>

    </div>

    <div class="row d-flex justify-content-center">
      <button>Sign Up</button>
    </div>

  </form>

</div>