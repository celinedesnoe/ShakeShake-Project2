<h2 class="d-flex justify-content-center text-center">The cocktail you are looking for:</h2>


<main class="multi-col">

  {{#each drinkArray}}

  <div class="tag">

    <h3 class="d-flex justify-content-center text-center shadow-title">{{this.strDrink}}</h3>



    <div class="d-flex justify-content-center font-light">
      <div class="div-marg">
        <p class="text-center "><b>Ingredients: </b></p>

        {{#each this.strIngredMeasure}}

        <p>
          {{this.Ingred}}
        </p>

        {{/each}}

      </div>

      <div class=" div-marg">
        <p class="text-center"><b>Measure:</b></p>

        {{#each this.strIngredMeasure}}
        <p>
          {{this.Measure}}
        </p>
        {{/each}}

      </div>
    </div>

    <div>
      <h3 class="d-flex justify-content-center text-center">Instructions</h3>

      <p class="text-center font-light">{{this.strInstructions}}</p>
    </div>


  </div>

  {{/each}}

</main>