<h2 class="d-flex justify-content-center text-center">Search for your favorite cocktai!</h2>


<div class="d-flex justify-content-center">
  <form action="/search-result-drink" method="GET">
    <label>by Name</label>
    <input type="text" name="search_query">
    <button>Find cocktails!</button>
  </form>
</div>

<div class="d-flex justify-content-center">
  <form action="/search-result-ingred" method="GET" id="ingred-list">
    <label>by Ingredients</label>
    <label>Ingredient 1</label>
    <input list="cocktails" type="text" name="search_query">

    <datalist id="cocktails">

      {{#each ingredArray}}
      <option value="{{this}}"></option>
      {{/each}}
    </datalist>

    <label>Ingredient 2</label>
    <input list="cocktails" type="text" name="search_query">

    <datalist id="cocktails">
      {{#each ingredArray}}
      <option value="{{this}}"></option>
      {{/each}}
    </datalist>


    <button>Find cocktails!</button>

  </form>
</div>

<main class="multi-col">

  {{#each cocktailArray}}

  {{!-- <div class="col-lg-4 col-md-6 mycard d-flex flex-column justify-content-between "> --}}
  <div class="tag-blue">

    <img src=" {{this.strDrinkThumb}}" class="img-nav">

    <h3 class="d-flex justify-content-center text-center shadow-title">{{this.strDrink}}</h3>




    <div class="d-flex justify-content-center font-light">
      <div class="div-marg">
        <p class="text-center "><b>Ingredients: </b></p>

        {{#each this.strIngredMeasure}}

        <p>
          {{this.Ingred}}
        </p>

        {{/each}}

      </div>

      <div class=" div-marg">
        <p class="text-center"><b>Measure:</b></p>

        {{#each this.strIngredMeasure}}
        <p>
          {{this.Measure}}
        </p>
        {{/each}}

      </div>
    </div>

    <div>
      <h3 class="d-flex justify-content-center text-center">Instructions</h3>

      <p class="text-center font-light">{{this.strInstructions}}</p>
    </div>

    <a href="/mycocktails/{{this.strDrink}}/add-favorites">❤️</a>

    {{!-- </div> --}}
  </div>




  {{/each}}

</main>
{{!-- </div>
</div> --}}