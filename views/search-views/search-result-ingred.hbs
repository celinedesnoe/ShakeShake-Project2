{{!-- #################################################### --}}
{{!-- List the cocktails with the ingredients selected --}}
{{!-- #################################################### --}}

<main class="multi-col">

  {{#each ingredArray}}

  {{#and true this.userCreated}}

  <div class="tag-pink">

    <img src=" {{this.strDrinkThumb}}" class="img-drink">

    <h3 class="d-flex justify-content-center text-center shadow-title">{{this.strDrink}}</h3>

    <div class="d-flex justify-content-center font-light">
      <div class="div-marg">

        {{#each this.strIngredMeasure}}

        {{#contains ../../search_ingredient (downcase this.Ingred) }}

        <p class="orange ingred-measure">
          {{this.Ingred}}
        </p>
        {{else}}
        <p class="ingred-measure">
          {{this.Ingred}}
        </p>
        {{/contains}}

        {{/each}}

      </div>

      <div class="div-marg">

        {{#each this.strIngredMeasure}}
        {{#contains ../../search_ingredient (downcase this.Ingred) }}

        <p class="orange ingred-measure">
          {{this.Measure}}
        </p>
        {{else}}

        <p class="ingred-measure">
          {{this.Measure}}
        </p>

        {{/contains}}
        {{/each}}

      </div>
    </div>

    <hr>

    <div>
      {{!-- <h3 class="d-flex justify-content-center text-center">Instructions</h3> --}}

      <p class="text-center font-light">{{this.strInstructions}}</p>
    </div>

    <div class="d-flex justify-content-around">
      {{!-- Link to the EDIT page (ID in the address to know which book to edit) --}}
      <div><button><a href="/mycocktails/{{this.strDrink}}/edit" class="font-light no-link">Edit</a></button></div>

      {{!-- Link to the DELETE route (ID in address to know which book to delete) --}}
      <div><button><a href="/mycocktails/{{this.strDrink}}/delete" class="font-light no-link">Delete</a></button></div>

    </div>

  </div>



  {{else}}



  <div class="tag-blue">

    <img src=" {{this.strDrinkThumb}}" class="img-drink">


    <h3 class="d-flex justify-content-center text-center shadow-title">{{this.strDrink}}</h3>

    <div class="d-flex justify-content-center font-light">
      <div class="div-marg">

        {{#each this.strIngredMeasure}}

        {{#contains ../../search_ingredient (downcase this.Ingred) }}

        <p class="orange ingred-measure">
          {{this.Ingred}}
        </p>
        {{else}}
        <p class="ingred-measure">
          {{this.Ingred}}
        </p>
        {{/contains}}

        {{/each}}

      </div>

      <div class="div-marg">

        {{#each this.strIngredMeasure}}

        {{#contains ../../search_ingredient (downcase this.Ingred) }}

        <p class="orange ingred-measure">
          {{this.Measure}}
        </p>
        {{else}}
        <p class="ingred-measure">
          {{this.Measure}}
        </p>

        {{/contains}}
        {{/each}}

      </div>
    </div>

    <hr>

    <div>
      {{!-- <h3 class="d-flex justify-content-center text-center">Instructions</h3> --}}

      <p class="text-center font-light">{{this.strInstructions}}</p>
    </div>
  </div>


  {{/and}}



  {{/each}}

</main>